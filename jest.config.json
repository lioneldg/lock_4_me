{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "testMatch": ["**/__tests__/**/*.ts?(x)", "**/?(*.)+(spec|test).ts?(x)"],
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", {
      "isolatedModules": true
    }]
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
  "moduleNameMapper": {
    "\\.(css|less|scss|module.css)$": "identity-obj-proxy"
  },
  "setupFiles": ["<rootDir>/jest.env.ts"]
} 